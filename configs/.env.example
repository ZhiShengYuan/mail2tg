# Database
DB_PASSWORD=your_database_password_here

# Redis
REDIS_PASSWORD=your_redis_password_here

# Gmail API (if using Gmail)
GMAIL_PROJECT_ID=your-gcp-project-id
# Place credentials.json in /etc/mail-to-tg/credentials.json

# Telegram Bot
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_WEBHOOK_URL=

# Security
# Generate with: openssl rand -base64 32
ENCRYPTION_KEY=your_32_byte_base64_encryption_key_here
JWT_SECRET=your_jwt_secret_here

# LLM (OpenAI-compatible API for email summarization)
LLM_API_KEY=sk-your-api-key-here
LLM_BASE_URL=https://api.openai.com/v1
LLM_MODEL=gpt-4o-mini
# For OpenRouter, use: https://openrouter.ai/api/v1
# For local LLMs (Ollama), use: http://localhost:11434/v1
