{
  "environment": "development",
  "database": {
    "host": "localhost",
    "port": 3306,
    "name": "mail_to_tg",
    "user": "mail_user",
    "password": "your_database_password_here",
    "max_open_conns": 25,
    "max_idle_conns": 5
  },
  "redis": {
    "host": "localhost",
    "port": 6379,
    "password": "your_redis_password_here",
    "db": 0
  },
  "mail_fetcher": {
    "workers": 3,
    "imap_poll_interval": 60,
    "gmail": {
      "project_id": "your-gcp-project-id",
      "pubsub_topic": "gmail-notifications",
      "pubsub_subscription": "gmail-sub",
      "credentials_path": "/etc/mail-to-tg/credentials.json"
    }
  },
  "telegram": {
    "bot_token": "123456:ABC-DEF1234ghIkl-zyx57W2v1u123ew11",
    "webhook_url": ""
  },
  "web": {
    "host": "0.0.0.0",
    "port": 8080,
    "base_url": "http://localhost:8080",
    "tls_enabled": false,
    "tls_cert": "/etc/mail-to-tg/ssl/cert.pem",
    "tls_key": "/etc/mail-to-tg/ssl/key.pem"
  },
  "security": {
    "encryption_key": "your_32_byte_base64_encryption_key_here",
    "jwt_secret": "your_jwt_secret_here"
  },
  "storage": {
    "attachments_path": "/var/lib/mail-to-tg/attachments"
  },
  "logging": {
    "level": "debug",
    "format": "console"
  },
  "llm": {
    "enabled": true,
    "base_url": "https://api.openai.com/v1",
    "api_key": "sk-your-openai-api-key-here",
    "model": "gpt-4o-mini",
    "timeout_seconds": 10,
    "max_tokens": 300,
    "fallback_on_error": true,
    "cache_ttl_hours": 24
  }
}
